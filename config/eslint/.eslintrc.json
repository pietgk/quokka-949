// https://github.com/import-js/eslint-plugin-import/issues/1485
{
  // other configuration are omitted for brevity
  "settings": {
    "import/resolver": {
      "typescript": {} // this loads <rootdir>/tsconfig.json to eslint
    }
  },
  "overrides": [
    {
      "files": ["**/infra/**/*"],
      "rules": {
        "no-new": 0
      }
    }
  ],
  "rules": {
    "import/no-extraneous-dependencies": 0
  }
}
